@using WebApp.Extensions;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @{
            string pageTitle = "";
            if (string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
            {
                pageTitle = "MoneyMe";
            }
            else
            {
                pageTitle = ViewData["Title"]?.ToString() + " - MoneyMe";
            }
        }
        @pageTitle
    </title>
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap4-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet" />
    <link href="~/lib/daterangepicker/daterangepicker.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet"/>
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Preloader -->
        <div id="divPreloader" class="preloader flex-column justify-content-center align-items-center">
            <h1><span class="fas fa-sync-alt fa-spin text-brand-color"></span></h1>
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <a href="/" class="navbar-brand">
                <img src="~/img/AppLogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">MoneyMe</span>
            </a>

            <!-- Right navbar links -->
            @{
                await Html.RenderPartialAsync("_LayoutRightNavBarLink");
            }
        </nav>
        <!-- /.navbar -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @{
            await Html.RenderPartialAsync("_LayoutFooter");
        }

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.min.js"></script>
    <script src="~/lib/bootstrap4-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
